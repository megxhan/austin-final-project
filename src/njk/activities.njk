{% extends '_layouts/base.njk' %}

{% block page_title %}Activities{% endblock %}

{% block content %}
<div class="container">

<h1 class="activity-title">Activities to do in Austin</h1>
  <table class="table table-striped bg-light">
    <thead>
      <tr>
        <th>Date/Time</th>
        <th>Address</th>
        <th>Activity</th>
      </tr>
    </thead>
    <tbody>
    {% for act in austinactivities.activities%}
      <tr>
        <td>{{ act.date }}</td>
        <td>{{ act.location }}</td>
        <td> {{ act.text | safe }} </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <p><iframe src="//batchgeo.com/map/ff8ab5a87d2033e4b818e80c515b1dc0" frameborder="0" width="100%" height="550" sandbox="allow-top-navigation allow-scripts allow-popups allow-same-origin allow-modals allow-forms" style="border:1px solid #aaa;"></iframe></p><p><small>View <a href="https://batchgeo.com/map/ff8ab5a87d2033e4b818e80c515b1dc0">Austin Murals</a> in a full screen map</small></p>
</div>
{% endblock %}